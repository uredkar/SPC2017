{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es6", "dom" ],
    "mapRoot": "./",
    "module": "es6",
    "moduleResolution": "node",
    "outDir": "../dist/out-tsc",
    "sourceMap": true,
    "target": "es5",

    "exclude": [
      "node_modules/@types",
      "node_modules",
      "jspm_packages",
      
      "src/typings/requirejs",
      "src/typings/browser",
      "src/typings/browser.d.ts",

      "**/*.spec.ts"
    ],
    "typeRoots": [
      "../node_modules/@types"
    ]
  }
}
